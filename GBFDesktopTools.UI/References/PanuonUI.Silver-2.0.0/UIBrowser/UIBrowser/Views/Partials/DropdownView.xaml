                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="15">
                            <Border.Background>
                                <ImageBrush ImageSource="/UIBrowser;component/Resources/Images/HeadImg.jpg" />
                            </Border.Background>
                        </Border>
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Center">Admin</TextBlock>
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   FontFamily="{StaticResource PanuonIconFont}">&#xe91d;</TextBlock>
                    </StackPanel>
                    <pu:DropDown.Child>
                        <Border Width="200"
                                Height="100">
                        </Border>
                    </pu:DropDown.Child>
                </pu:DropDown>
