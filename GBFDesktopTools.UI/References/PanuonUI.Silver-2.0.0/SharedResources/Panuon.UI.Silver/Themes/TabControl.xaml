                            Value="True" />
                    <Setter Property="BorderThickness"
                            Value="0" />
                    <Setter Property="Margin"
                            Value="2,0,0,0" />
                    <Setter Property="Background"
                            Value="Transparent" />
                    <Setter Property="local:ButtonHelper.HoverBackground"
                            Value="#FF4C4C" />
